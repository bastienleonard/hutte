require 'hutte'
require 'hutte/runner'

STANDARD_FILENAME = 'huttefile'
GLOBAL_CONFIG = Hutte::Runner::GlobalConfig.new

begin
  require "./#{STANDARD_FILENAME}"
rescue LoadError
  STDERR.puts "Could not load file #{STANDARD_FILENAME}"
  exit(1)
end

not_found = $*.reject { |target| Hutte::Runner::Task.include?(target.to_sym) }

unless not_found.empty?
  STDERR.puts "Task(s) not found: #{not_found.join(', ')}"
  exit(1)
end

Hutte::SshSession.run(
  GLOBAL_CONFIG.user,
  GLOBAL_CONFIG.host,
  GLOBAL_CONFIG.password
) do |dsl|
  $*.each do |target|
    Hutte::Runner::Task.run_task(target.to_sym, dsl)
  end
end
